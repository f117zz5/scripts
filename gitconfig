[user]
	name = MyName
	email = myname@mymail.com
[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	features = side-by-side line-numbers decorations
	# Improvement: usage of n and N to move between diff sections
	navigate = true
[delta "decorations"]
	commit-decoration-style = bold yellow box
	file-style = bold yellow
	hunk-header-style = bold cyan
[alias]
	# Super one-line logs
	lol = log --graph --pretty=format:'%C(bold blue)%h%C(reset) -%C(bold red)%d%C(reset) %s %C(green)(%cr)%C(reset) %C(dim white)<%an>%C(reset)' --abbrev-commit
	lola = log --graph --pretty=format:'%C(bold blue)%h%C(reset) -%C(bold red)%d%C(reset) %s %C(green)(%cr)%C(reset) %C(dim white)<%an>%C(reset)' --abbrev-commit --all

	# Basic Shortcuts
	st = status -sb
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached

	# Improved Logging (Fuller View)
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold red)%d%C(reset)' --all
	glog = !"git lg"
	# Multi-line detailed log
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold red)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	last = log -1 HEAD

	# Undo/Reset Operations
	unstage = reset HEAD --
	undo = reset --soft HEAD~1
	undo-commit = reset --mixed HEAD~1

	# Diffing
	di = diff --color-words
	dft = difftool --no-prompt

	# Utility
	ls = ls-files
	ign = ls-files -o -i --exclude-standard
	aliases = config --get-regexp alias

	# Branching
	prune-all = !git remote | xargs -n 1 git remote prune